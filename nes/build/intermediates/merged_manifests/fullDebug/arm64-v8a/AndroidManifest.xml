<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nostalgiaemulators.nesfull"
    android:versionCode="111"
    android:versionName="2.0.9" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="false" />
    <!--
         Toto zde byt musi. Aby byla aplikace dostupna pro TV je zapotrebi explicitne deklarovat ze nevyzadujeme
    	touchscreen
    -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" /> <!-- romy jsou na SD karte -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- to je jasne -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- kvuli reklamam a socialnim sitim -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- kvuli reklamam a remote controleru -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- kdyz clovek hraje tak se nezamyka obrazovka na zamek ale jen zhasne -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" /> <!-- kvuli reklamam -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- behem hry se neuspava -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.nostalgiaemulators.nes.NesApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
        <meta-data
            android:name="svnversion"
            android:value="@string/svn_version" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/fb_app_id" />

        <activity
            android:name="com.nostalgiaemulators.nes.NesGalleryActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nostalgiaemulators.nes.NesEmulatorActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.nostalgiaemulators.nes.NesSlotImportActivity"
            android:label="Slot import" >

            <!-- otevirani z filesystemu -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
                <data android:host="*" />
                <data android:scheme="file" />
                <data android:pathPattern=".*\\.nness" />
            </intent-filter>

            <!-- otevirani z webu -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="*/*" />
                <data android:host="*" />
                <data android:scheme="http" />
                <data android:pathPattern=".*\\.nness" />
            </intent-filter>

            <!-- otevirani z email programu -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/vnd.nesnostalgia" />
                <data android:host="*" />
                <data android:scheme="content" />
            </intent-filter>

            <!-- otevirani ze zprasenejch email klientu kteri likviduji mimetype na octet-stream -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/octet-stream" />
                <data android:host="*" />
                <data android:scheme="content" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.nostalgiaemulators.nesfull.provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" /> <!-- <activity -->
        <!-- android:name="com.nostalgiaemulators.framework.ui.gamegallery.GalleryActivity" -->
        <!-- android:label="@string/app_name" > -->
        <!-- </activity> -->
        <activity
            android:name="com.nostalgiaemulators.framework.ui.gamegallery.SlotSelectionActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.nostalgiaemulators.framework.base.OpenGLTestActivity"
            android:exported="false"
            android:label="@string/app_name" />
        <activity
            android:name="com.nostalgiaemulators.framework.base.RestarterActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:label="@string/app_name"
            android:process=":restarter" />
        <activity
            android:name="com.nostalgiaemulators.framework.ui.advertising.AppWallActivity"
            android:exported="false"
            android:label="@string/app_name" />
        <activity
            android:name="com.nostalgiaemulators.framework.ui.remotecontroller.RemoteControllerActivity"
            android:label="Remote controller"
            android:screenOrientation="landscape" /> <!-- <activity -->
        <!-- tools:replace="android:label" -->
        <!-- android:name="com.nostalgiaemulators.framework.ui.gamegallery.SlotSelectionActivity" -->
        <!-- android:label="Select slot" /> -->
        <activity
            android:name="com.nostalgiaemulators.framework.ui.preferences.GeneralPreferenceActivity"
            android:label="@string/general_pref"
            android:theme="@style/PrefTheme" />
        <activity
            android:name="com.nostalgiaemulators.framework.ui.preferences.GamePreferenceActivity"
            android:label="@string/game_pref"
            android:theme="@style/PrefTheme" />
        <activity
            android:name="com.nostalgiaemulators.framework.ui.preferences.KeyboardSettingsActivity"
            android:label="@string/key_pref"
            android:theme="@style/PrefTheme" />
        <activity
            android:name="com.nostalgiaemulators.framework.ui.cheats.CheatsActivity"
            android:label="Cheats" />
        <activity
            android:name="com.nostalgiaemulators.framework.ui.social_net.FacebookPictureActivity"
            android:label="FB" />
        <activity
            android:name="com.nostalgiaemulators.framework.ui.preferences.TouchControllerSettingsActivity"
            android:label="@string/game_pref" />
        <activity
            android:name="com.nostalgiaemulators.framework.ui.preferences.ScreenViewPortSettingsActivity"
            android:exported="false"
            android:label="@string/game_pref" /> <!-- Aktivity tretich stran -->
        <activity android:name="com.coderplus.filepicker.FilePickerActivity" />
        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="org.acra.dialog.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:process=":acra"
            android:theme="@android:style/Theme.Dialog" />

        <service
            android:name="org.acra.sender.SenderService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:process=":acra" />

        <provider
            android:name="org.acra.attachment.AcraContentProvider"
            android:authorities="com.nostalgiaemulators.nesfull.acra"
            android:exported="false"
            android:grantUriPermissions="true"
            android:process=":acra" />
    </application>

</manifest>