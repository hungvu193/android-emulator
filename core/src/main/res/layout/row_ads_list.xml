<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_ads_list"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:contentDescription="@string/empty_desc"
        android:src="@drawable/ads_icon"
        android:id="@+id/game_item_bck"/>

    <TextView
        android:id="@+id/row_game_item_name"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:shadowColor="@color/ads_color"
        android:shadowDx="1"
        android:shadowDy="1"
        android:text="@string/todays_top_apps"
        android:shadowRadius="6"
        android:textColor="@color/ads_color"
        android:textSize="18dp"
        android:maxLines="2"
        android:ellipsize="end"
         />

    <ImageView
        android:id="@+id/game_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_ads_next" />

</LinearLayout>